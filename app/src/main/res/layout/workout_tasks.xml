<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_norm"
    tools:context=".WorkoutTaskActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White_norm"
                android:orientation="vertical"
                android:theme="@style/AppTheme">


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/AppTheme.NoActionBar"
                    app:titleTextColor="@color/White_norm">

                </android.support.v7.widget.Toolbar>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/headpr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="1. Системы счисления"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/courgette" />

                </LinearLayout>


            </android.support.design.widget.AppBarLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/but1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:onClick="But_menu"
                        android:textSize="20dp"
                        app:fontFamily="@font/amaranth" />

                    <Button
                        android:id="@+id/but2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:onClick="But_menu"
                        app:fontFamily="@font/amaranth"/>

                    <Button
                        android:id="@+id/but3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="3"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:onClick="But_menu"
                        app:fontFamily="@font/amaranth"/>

                    <Button
                        android:id="@+id/but4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="4"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:onClick="But_menu"
                        app:fontFamily="@font/amaranth"/>

                    <Button
                        android:id="@+id/but5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="5"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:onClick="But_menu"
                        app:fontFamily="@font/amaranth"/>

                    <Button
                        android:id="@+id/but6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="6"
                        android:onClick="But_menu"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        app:fontFamily="@font/amaranth"/>

                    <Button
                        android:id="@+id/but7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="7"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:onClick="But_menu"
                        app:fontFamily="@font/amaranth" />

                    <Button
                        android:id="@+id/but8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="8"
                        android:onClick="But_menu"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        app:fontFamily="@font/amaranth"/>

                    <Button
                        android:id="@+id/but9"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="9"
                        android:onClick="But_menu"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        app:fontFamily="@font/amaranth"/>

                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="#d8d8d8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Переведите десятичное число 1000 в шестнадцатиричную систему."
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/amaranth" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/otvet_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/ans"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    app:fontFamily="@font/amaranth" />

                <EditText
                    android:id="@+id/answer"
                    android:layout_width="150dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="50dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    app:fontFamily="@font/amaranth" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/otv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:enabled="false"
                    android:text="Решение:"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    app:fontFamily="@font/amaranth" />

                <TextView
                    android:id="@+id/otv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:text="1000/16=62; Остаток = 8\n
62/16=3; Остаток = 14
3/16=0;\n Остаток = 3\n\n
Переписываем остатки в обратном порядке: 3E8
"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    app:fontFamily="@font/amaranth" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="Проверить"
                    android:textSize="10sp"
                    app:fontFamily="@font/amaranth"
                    android:onClick="Check" />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/decision"
                    android:layout_height="65dp"
                    android:text="Сгенирировать новые данные"
                    android:textSize="10sp"
                    android:enabled="false"
                    android:onClick="Rand"
                    app:fontFamily="@font/amaranth"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="Следующий вопрос"
                    android:textSize="10sp"
                    android:onClick="Next"
                    app:fontFamily="@font/amaranth"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>